@using Project.Models
@using Newtonsoft.Json


<!-- Offcanvas Menu Begin -->
<div class="offcanvas-menu-overlay"></div>
<div class="offcanvas-menu-wrapper">
    <div class="offcanvas__close">+</div>
    <ul class="offcanvas__widget">
        <li><span class="icon_search search-switch"></span></li>
        <li>
            <a href="#">
                <span class="icon_heart_alt"></span>
                <div class="tip">2</div>
            </a>
        </li>
        <li>
            <a href="#">
                <span class="icon_bag_alt"></span>
                <div class="tip">2</div>
            </a>
        </li>
    </ul>
    <div class="offcanvas__logo">
        <a href="/Home"><img src="~/assets/img/logo.png" alt=""></a>
    </div>
    <div id="mobile-menu-wrap"></div>
    <div class="offcanvas__auth">
        <a href="Account/Login">Login</a>
        <a href="Account/Register">Register</a>
    </div>
</div>
<!-- Offcanvas Menu End -->
<!-- Header Section Begin -->
<header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3 col-lg-2">
                <div class="header__logo">
                    <a href="/Home"><img src="~/assets/img/logo.png" alt=""></a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-7">
                <nav class="header__menu">
                    <ul>
                        <li class="active"><a href="/Home">Home</a></li>
                        @*<li><a href="#">About Us</a></li>*@

                        <li><a href="/Products">Shop</a></li>                        
                        <li><a href="/Blog">Blog</a></li>
                        <li><a href="/Contact">Contact</a></li>
                        <li><a href="/Cart/Success">History</a></li>                       
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__right">
                    <div class="header__right__auth">
                        @if (!String.IsNullOrEmpty(Context.Session.GetString("customer_email")))
						{
                            <a>@Context.Session.GetString("customer_email")</a>
                            <a href="/Account/Logout">Logout</a>
                        }
                        else
                        {
                            <a href="/Account/Login">Login</a>
                            <a href="/Account/Register">Register</a>
                        }
                    </div>
                    <ul class="header__right__widget">
                        <li><span class="icon_search search-switch"></span></li>
                        <li>
                            <a href="/Wishlist">
                                <span class="icon_heart_alt"></span>
                                @*<div class="tip">2</div>*@
                            </a>
                        </li>
                        <li>
                            @{
                                int quantity = 0;
                                if (!String.IsNullOrEmpty(Context.Session.GetString("cart")))
                                {
                                    List<Item> _cart = JsonConvert.DeserializeObject<List<Item>>(Context.Session.GetString("cart"));
                                    quantity = _cart.Count;
                                }
                            }
                            <a href="/Cart">
                                <span class="icon_bag_alt"></span>
                                <div class="tip">@quantity</div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="canvas__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>
<!-- Header Section End -->
