@{
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <meta http-equiv="Access-Control-Allow-Origin" content="*">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>Title</title>
</head>
<body>
    <div class="container">

        <form method="post" enctype="multipart/form-data">

            <button style="margin:20px 0px; display:none;" id="btnModelUpdate" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Update
            </button>

            <!-- Modal -->
            <div class="modal fade bd-example-modal-lg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <table id="OrderDetail" class="table table-striped table-bordered">
                                <thead class="thead-light">
                                    <tr>

                                        <th>Name</th>
                                        <th>Photo</th>
                                        <th>Price</th>
                                        <th>Discount</th>
                                        <th>Quantity</th>
                                        <th>Total</th>

                                    </tr>
                                </thead>
                                <tbody id="allOrderDetail"></tbody>
                            </table>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <table style="margin-top: 50px;" id="KhachHang" class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Tên khách hàng</th>
                    <th>Địa chỉ</th>
                    <th>SĐT</th>
                    <th>Ngày đặt hàng</th>
                    <th>Giá</th>
                    <th>Trạng thái</th>
                    <th>Giao hàng</th>
                    <th>Chi tiết</th>


                </tr>
            </thead>
            <tbody id="allKH"></tbody>
        </table>
    </div>
</body>
</html>
<script type="text/javascript">
    let url = 'http://localhost:5248/';

    $(document).ready(function () {
        GetAllOrders();

    });

    function GetAllOrders() {

        $.ajax({
            url: url + 'api/ApiOrder',
            method: 'GET',
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            error: function (res) {

            },
            success: function (res) {
                const len = res.length;

                let table = '';
                for (var i = 0; i < len; ++i) {
                    table = table + '<tr>';
                    table = table + '<td>' + res[i].name + '</td>';
                    table = table + '<td>' + res[i].address + '</td>';
                    table = table + '<td>' + res[i].phone + '</td>';
                    table = table + '<td>' + res[i].create + '</td>';
                    table = table + '<td>' + res[i].price + '</td>';
                    if (res[i].status == 1) {
                        table = table + '<td> <text><label class="label label-danger">Đã giao hàng</label></text></td>';
                        table = table + '<td></td>';
                    }
                    else if (res[i].status == 0) {
                        table = table + '<td> <text><label class="label label-danger">Chưa giao hàng</label></text></td>';
                        table = table + '<td> <button type="button" class="btn btn-danger" onclick="UpdateOrder(\'' + res[i].id + '\')">Giao hàng</button> </td>';
                    }

                    table = table + '<td> <button type="button" class="btn btn-warning" onclick="GetOrderDetail(\'' + res[i].id + '\')">Detail</button> </td>';

                    table = table + '</tr>';
                }

                document.getElementById('allKH').innerHTML = table;
            },
            fail: function (response) { }

        })
    }

    function UpdateOrder(id) {

        $.ajax({
            url: url + "api/ApiOrder/" + id,
            method: "PUT",
            contentType: 'json',
            dataType: 'json',
            error: function (res) {
                alert("Khong thanh cong");
            },
            success: function (res) {
                GetAllOrders();
            },
            fail: function (response) { }
        })
    }

    function GetOrderDetail(id) {
        $("#btnModelUpdate").trigger('click');
        $.ajax({
            url: url + "api/ApiOrder/" + id,
            method: "GET",
            contentType: 'json',
            dataType: 'json',
            error: function (res) {
                alert("Khong thanh cong");
            },
            success: function (res) {
                const len = res.length;

                let table = '';
                for (var i = 0; i < len; ++i) {
                    table = table + '<tr>';
                    table = table + '<td>' + res[i].name + '</td>';
                    if (res[i].photo != null) {
                        table = table + '<td>' +
                            '<img src="/Upload/Products/' + res[i].photo + '" style = "width:100px;" >' + '</td>';
                    }
                    table = table + '<td>' + (res[i].price - res[i].price * res[i].discount / 100) + '</td>';
                    table = table + '<td>' + res[i].discount + '%' + '</td>';
                    table = table + '<td>' + res[i].quantity + '</td>';
                    table = table + '<td>' + res[i].quantity * (res[i].price - res[i].price * res[i].discount / 100) + '</td>';
                    table = table + '</tr>';
                }

                document.getElementById('allOrderDetail').innerHTML = table;
            },
            fail: function (response) { }
        })
    }
</script>








