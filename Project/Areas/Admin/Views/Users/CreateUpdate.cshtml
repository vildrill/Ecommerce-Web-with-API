@{
    //load file Layout.cshtml
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Project</h2>
                </div>
            </div>
        </div>
        <form method="post" action="@ViewBag.action">
            <!-- rows -->
            <div class="row" style="margin-top:5px;">
                <div class="col-md-2">Name</div>
                <div class="col-md-10">
                    <input type="text" value="@if(Model != null) {
                    <text>@Model.Name</text>
                    }" name="name" class="form-control" required>
                </div>
            </div>
            <!-- end rows -->
            <!-- rows -->
            <div class="row" style="margin-top:5px;">
                <div class="col-md-2">Email</div>
                <div class="col-md-10">

                    @*thuoc tinh disable : khong nhap duoc text vao o textbox*@
                    <input type="email" value="@if(Model != null){
                    <text>@Model.Email</text>
                    }" name="email" @if(Model != null){
                    <text>disabled</text>
                    } class="form-control" required>
                </div>
            </div>
            <!-- end rows -->
            <!-- rows -->
            <div class="row" style="margin-top:5px;">
                <div class="col-md-2">Password</div>
                <div class="col-md-10">
                    <input type="password" name="password" @if(Model != null){
                    <text>placeholder="Không đổi password thì không nhập thông tin vào ô textbox này"</text>
                    }else{
                    <text>required</text>
                    } class="form-control">
                </div>
            </div>
            <!-- end rows -->
            <!-- rows --> 
            <div class="row" style="margin-top:5px;">
                <div class="col-md-2"></div>
                <div class="col-md-10">
                    <input type="submit" value="Process" class="btn btn-primary">
                </div>
            </div>
            <!-- end rows -->
        </form>
    </div>
</div>
<!-- end dashboard inner -->
