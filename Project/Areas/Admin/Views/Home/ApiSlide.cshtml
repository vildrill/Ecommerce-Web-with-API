    function GetAllSlides() {
        $.ajax({
            url: url + 'api/APISlide',
            method: 'GET',
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            error: function (res) {

            },
            success: function (res) {
                const len = res.length;

                let table = '';
                for (var i = 0; i < len; ++i) {
                    table = table + '<tr>';
                    table = table + '<td>' + res[i].id + '</td>';
                    table = table + '<td>' + res[i].name + '</td>';
                    table = table + '<td>' + res[i].title + '</td>';
                   
                    if (res[i].photo != null) {
                        table = table + '<td>' +
                            '<img src="/Upload/Slides/' + res[i].photo + '" style = "width:100px;" >' + '</td>';
                    }
                   
                    table = table + '<td>' + res[i].info + '</td>';

                    table = table + '<td> <button type="button" class="btn btn-warning" onclick="GetSlide(\'' + res[i].id + '\')">Update</button> </td>';
                    table = table + '<td> <button type="button" class="btn btn-danger" onclick="DeleteSlide(\'' + res[i].id + '\')">Delete</button> </td>';
                    table = table + '</tr>';
                }

                document.getElementById('allKH').innerHTML = table;
            },
            fail: function (response) { }

        })
    }

