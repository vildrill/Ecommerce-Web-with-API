@using Project.Models
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}
@functions {
    public MyDbContext db = new MyDbContext();
    public ItemCustomers GetCustomers(int _CustomerId)
    {
        ItemCustomers record = db.Customers.Where(item => item.Id == _CustomerId).FirstOrDefault();
        return record != null ? record : new ItemCustomers();
    }
    public ItemOrders GetOrders(int _OrderId)
    {
        ItemOrders record = db.Orders.Where(item => item.Id == _OrderId).FirstOrDefault();
        return record != null ? record : new ItemOrders();
    }
    public ItemProduct GetProducts(int _ProductId)
    {
        ItemProduct record = db.Products.Where(item => item.Id == _ProductId).FirstOrDefault();
        return record != null ? record : new ItemProduct();
    }
}
<style>
    .cart__close > a {
        height: 45px;
        width: 45px;
        background: #f2f2f2;
        border-radius: 50%;
        font-size: 18px;
        color: #111111;
        line-height: 44px;
        text-align: center;
        display: inline-block;
        font-weight: 600;
        cursor: pointer;
    }

    .custom__btn > input {
        font-size: 14px;
        color: #111111;
        font-weight: 600;
        text-transform: uppercase;
        padding: 14px 30px 12px;
        background: #f5f5f5;
    }

    .discount__content .div__custom {
        position: relative;
        width: 370px;
        display: inline-block;
    }

        .discount__content .div__custom input {
            height: 52px;
            width: 100%;
            border: 1px solid #444444;
            border-radius: 50px;
            padding-left: 30px;
            padding-right: 115px;
            font-size: 14px;
            color: #444444;
        }

        .discount__content .div__custom button {
            position: absolute;
            right: 4px;
            top: 4px;
        }

</style>
<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/Home"><i class="fa fa-home"></i> Home</a>
                    <span>Shopping cart details</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Shop Cart Section Begin -->
<section class="shop-cart spad">
    <div class="container">
        <form method="post">

            <div class="row">
                <div class="col-lg-12">
                    <div class="shop__cart__table">

                        <table>
                            <thead>
                                <tr>
                                    <th>Photo</th>
                                    <th >Name</th>
                                    <th >Price</th>
                                    <th style="text-align: center;">Quantity</th>
                                    <th >Total</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    ItemProduct recordProducts = GetProducts(item.ProductId);
                                    <tr>
                                        <td>
                                            @if (recordProducts.Photo != null && File.Exists(Directory.GetCurrentDirectory() + "\\wwwroot\\Upload\\Products\\" + recordProducts.Photo))
                                            {
                                                <img src="~/Upload/Products/@recordProducts.Photo" style="width:100px;" />
                                            }
                                        </td>
                                        <td>@recordProducts.Name</td>
                                        <td>@string.Format("{0:#,#.}", recordProducts.Price - (recordProducts.Price * recordProducts.Discount) / 100) $</td>
                                        <td style="text-align:center">@item.Quantity</td>
                                        <td>@string.Format("{0:#,#.}", @item.Quantity*(recordProducts.Price - (recordProducts.Price * recordProducts.Discount) / 100)) $</td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="cart__btn">
                        <a href="/Home">Continue Shopping</a>
                    </div>
                </div>


            </div>
        </form>
    </div>

</section>



<!-- Shop Cart Section End -->
