    function GetTag(id) {
        $("#btnModel").trigger('click');
        $("#btn-accept-add").css("display", "none");
        $("#btn-accept-update").css("display", "block");

        $.ajax({
            url: url + 'api/APITag/' + id,
            method: 'GET',
            contentType: 'json',
            dataType: 'json',
            error: function (res) {
            },
            success: function (res) {
                photo = res.photo;
                TagId = res.id;
                $("#Name").val(res.name)

            },
            fail: function (response) { }

        })
    }

    function UpdateTag(id) {

        $.ajax({
            url: url + "api/APITag/" + id + "?name=" + $("#Name").val(),
            method: "PUT",
            contentType: 'json',
            dataType: 'json',
            error: function (res) {
                alert("Sua khong thanh cong");
            },
            success: function (res) {
                alert("Sua thanh cong");
                GetAllTags();
                $('.close').trigger('click');

            },
            fail: function (response) { }
        })
    }

    function DeleteTag(id) {
        if (confirm("Ban co muon xoa khong?")) {
            $.ajax({
                url: url + "api/APITag/" + id,
                method: "DELETE",
                contentType: 'json',
                dataType: 'json',
                error: function (res) {
                    alert("Xoa khong thanh cong");
                },
                success: function (res) {
                    alert("Xoa thanh cong");
                    GetAllTags();
                },
                fail: function (response) { }
            })
        }
    }

    function Empty() {
        $("#btn-accept-add").css("display", "block");
        $("#btn-accept-update").css("display", "none");
        $.ajax({
            error: function (res) {

            },
            success: function (res) {
                $("#Name").val('')

            },
            fail: function (response) { }
        })
    }
