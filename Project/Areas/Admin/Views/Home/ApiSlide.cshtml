                                    <label for="PriceOut">Thông tin Slide</label>
                                </div>
                                <div class="col-lg-9">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="Info">
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" id="btn-accept-add" class="btn btn-primary" onclick="AddSlide();">AddSlide</button>
                            <button type="button" style="display:none;" id="btn-accept-update" class="btn btn-primary" onclick="UpdateSlide(ProdId);">Update</button>
                        </div>
                    </div>
                </div>
            </div>


