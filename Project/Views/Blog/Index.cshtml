@using Project.MyClass
@using Project.Models
@using X.PagedList
@using X.PagedList.Mvc.Core
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}
<style>
    .pagination li {
        display: inline-block;
        height: 40px;
        width: 40px;
        border: 1px solid #f2f2f2;
        border-radius: 50%;
        font-size: 14px;
        color: chocolate;
        font-weight: 600;
        line-height: 40px;
        text-align: center;
        transition: all, 0.3s;
        margin-right: 6px;
        font-weight: 600;
    }

        .pagination li:hover {
            background: #111111;
            border-color: #f2f2f2;
            color: #f2f2f2;
        }
</style>
<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/Home"><i class="fa fa-home"></i> Home</a>
                    <span>Blog</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<section class="blog spad">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic set-bg" data-setbg="/Upload/Blog/@item.Photo"></div>
                        <div class="blog__item__text">
                            <h6><a href="/Blog/Detail/@item.Id">@item.Title</a></h6>
                            <ul>
                                <li>by <span>Tran Minh Hien</span></li>
                                <li>@item.Create_at.ToString("dd/MM/yyyy")
                                <li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-12 text-center">
                <div class="pagination__option">

                    @Html.PagedListPager((IPagedList)Model,p=>Url.Action("Index", new {page = p}))
                </div>
            </div>

        </div>
    </div>
</section>
