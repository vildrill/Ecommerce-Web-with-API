@{
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <meta http-equiv="Access-Control-Allow-Origin" content="*">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>Title</title>
</head>
<body>
    <div class="container">

        <form method="post" enctype="multipart/form-data">

            <!-- Button trigger modal -->
            <button style="margin:20px 0px;" id="btnModel" type="button" class="btn btn-primary" onclick="Empty();" data-toggle="modal" data-target="#exampleModal">
                Add New Blog
            </button>
            <button style="margin:20px 0px; display:none;" id="btnModelUpdate" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Update
            </button>

            <!-- Modal -->
            <div class="modal fade bd-example-modal-lg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-3">
                                    <label for="Name">Ảnh Sản Phẩm</label>
                                </div>
                                <div class="col-lg-9">
                                    <div class="form-group">
                                        <input type="file" class="form-control" id="Photo">
                                    </div>
                                </div>

                                <div class="col-lg-3">
                                    <label for="Name">Title</label>
                                </div>
                                <div class="col-lg-9">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="title_blog">
                                    </div>
                                </div>
                               @* <div class="col-lg-3">
                                    <label for="Name">Update at</label>
                                </div>
                                <div class="col-lg-9">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="Uat">
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <label for="Name">Create at</label>
                                </div>
                                <div class="col-lg-9">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="Cat">
                                    </div>
                                </div>*@
                                <div class="col-lg-3">
                                    <label for="Name">Description</label>
                                </div>
                                <div class="col-lg-9">
                                    <div class="form-group">
                                        <textarea name="Description" id="description_blog" class="form-control" ckeditor="true" ismandatory="false">                                            

                                        </textarea>
                                        <script language="javascript">
                                            CKEDITOR.replace("description_blog");
                                        </script>

                                       
                                    </div>
                                </div>
                               

                                <div class="col-lg-3">
                                    <label for="Name">Content</label>
                                </div>
                                <div class="col-lg-9">
                                    <div class="form-group">
                                        <textarea name="Content" id="content_blog" class="form-control" ckeditor="true" ismandatory="false">                                            

                                        </textarea>
                                        <script language="javascript">
                                            CKEDITOR.replace("content_blog");
                                        </script>
                                       
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <label for="Name">Video</label>
                                </div>
                                <div class="col-lg-9">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="Video">
                                    </div>
                                </div>
                               
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" id="btn-accept-add" class="btn btn-primary" onclick="AddBlog();">AddBlog</button>
                            <button type="button" style="display:none;" id="btn-accept-update" class="btn btn-primary" onclick="UpdateBlog(BlogId)">Update</button>
                        </div>
                    </div>
                </div>
            </div>
           

        </form>
        <table id="Blog" class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>                 
                    <th>Title</th>
                    <th>Photo</th>                                                                  
                    <th>Create_at</th>
                    <th>Update_at</th>
                    <th>Video</th>
                    <th>Update</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody id="allBlog"></tbody>
        </table>
    </div>
</body>
</html>
<script type="text/javascript">
    let url = 'http://localhost:5248/';

    $(document).ready(function () {
        GetAllBlog();
    });
    var photo;
    var BlogId;

    function GetAllBlog() {
       
        $.ajax({
            url: url + 'api/ApiBlog',
            method: 'GET',
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            error: function (res) {

            },
            success: function (res) {
                const len = res.length;

                let table = '';
                for (var i = 0; i < len; ++i) {
                    table = table + '<tr>';
                 
                    table = table + '<td>' + res[i].title + '</td>';                  
                    if (res[i].photo != null) {
                        table = table + '<td>' +
                            '<img src="/Upload/Blog/' + res[i].photo + '" style = "width:100px;" >' + '</td>';
                    }
                    table = table + '<td>' + res[i].create_at + '</td>';
                    table = table + '<td>' + res[i].update_at + '</td>';
                    table = table + '<td>' + '<iframe width="200px" height = "150px" src = "' + res[i].video + '" title = "YouTube video player" frameborder = "0" allow = "accelerometer; autoplay; clipboard - write; encrypted - media; gyroscope; picture -in -picture; web - share" allowfullscreen > </iframe>' +  '</td >';
                    table = table + '<td>' + '<button type="button" class="btn btn-warning" onclick="GetBlog(\'' + res[i].id + '\')">Update</button> </td>';
                    table = table + '<td> <button type="button" class="btn btn-danger" onclick="DeleteBlog(\'' + res[i].id + '\')">Delete</button> </td>';
                    table = table + '</tr>';
                }

                document.getElementById('allBlog').innerHTML = table;
            },
            fail: function (response) { }

        })
    }
    var localeDate = (new Date()).toLocaleDateString();

    function AddBlog() {

        uploadFiles();
        var desc = CKEDITOR.instances['description_blog'].document.getBody().getHtml();
        var cont = CKEDITOR.instances['content_blog'].document.getBody().getHtml();
        $.ajax({
            url: url + 'api/ApiBlog' + "?title=" + $("#title_blog").val() + "&create_at=" + localeDate + "&update_at=" + localeDate + "&description=" + desc + "&content=" + cont+ "&photo=" + $("#Photo").val() + "&video=" + $("#Video").val(),
            method: "POST",
            contentType: 'json',
            dataType: 'json',
            error: function (res) {
                alert("Them moi khong thanh cong");
            },
            success: function (res) {
                alert("Them moi thanh cong");
                $('.close').trigger('click');
              
                GetAllBlog();

            },
            fail: function (response) { }
        })
    }

    function uploadFiles() {
        
        var files = document.getElementById('Photo').files;
        var formData = new FormData(); //create form
        if ($("#Photo").val() == '' && photo == null) {
            alert("Please choose an image");
        }

        for (var i = 0; i != files.length; i++) {
            formData.append("files", files[i]); //loop through all files and append
        }

        $.ajax(
            {
                url: url + 'api/ApiBlog' + '/Insert',
                data: formData, // send it as formData
                processData: false,
                contentType: false,
                type: "POST", //type is post as we will need to post files
                success: function (data) {

                }
            }
        );
    }

    function GetBlog(id) {
        $("#btnModel").trigger('click');
        $("#btn-accept-add").css("display", "none");
        $("#btn-accept-update").css("display", "block");

        $.ajax({
            url: url + 'api/ApiBlog/' + id,
            method: 'GET',
            contentType: 'json',
            dataType: 'json',
            error: function (res) {
            },
            success: function (res) {
                photo = res.photo;
                BlogId = res.id;
                $("#title_blog").val(res.title),
                    CKEDITOR.instances['description_blog'].setData(res.description),
                    CKEDITOR.instances['content_blog'].setData(res.description),

                    $("#Video").val(res.video)                   
            },
            fail: function (response) { }

        })
    }

    function UpdateBlog(id) {
        uploadFiles();
        if ($("#Photo").val() != '') {
            photo = document.getElementById("Photo").value;
        }
        var desc = CKEDITOR.instances['description_blog'].document.getBody().getHtml();
        var cont = CKEDITOR.instances['content_blog'].document.getBody().getHtml();
        $.ajax({
           
            url: url + "api/ApiBlog/" + id + "?title=" + $("#title_blog").val() + "&create_at=" + localeDate + "&update_at=" + localeDate + "&description=" + desc + "&content=" + cont + "&photo=" + $("#Photo").val() + "&video=" + $("#Video").val(),
            method: "PUT",
            contentType: 'json',
            dataType: 'json',
            error: function (res) {
                alert("Sua khong thanh cong");
            },
            success: function (res) {
                alert("Sua thanh cong");
                GetAllBlog();
                $('.close').trigger('click');

            },
            fail: function (response) { }
        })
    }

    function Empty() {
        $("#btn-accept-add").css("display", "block");
        $("#btn-accept-update").css("display", "none");
        $.ajax({
            error: function (res) {

            },
            success: function (res) {
                $("#title_blog").val(''),
                    CKEDITOR.instances['description_blog'].setData(''),
                    CKEDITOR.instances['content_blog'].setData(''),
                    $("#Video").val(''),                  
                    $("#Photo").val('')
            },
            fail: function (response) { }
        })
    }

    function DeleteBlog(id) {
        if (confirm("Ban co muon xoa khong?")) {
            $.ajax({
                url: url + "api/ApiBlog/" + id,
                method: "DELETE",
                contentType: 'json',
                dataType: 'json',
                error: function (res) {
                    alert("Xoa khong thanh cong");
                },
                success: function (res) {
                    alert("Xoa thanh cong");
                    GetAllBlog();
                },
                fail: function (response) { }
            })
        }
    }
</script>
