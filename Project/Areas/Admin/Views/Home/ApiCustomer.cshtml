@{
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <meta http-equiv="Access-Control-Allow-Origin" content="*">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>Title</title>
</head>
<body>
    <div class="container">

        <form method="post" enctype="multipart/form-data">

            <!-- Button trigger modal -->
            <button style="margin:20px 0px;" id="btnModel" type="button" class="btn btn-primary" onclick="Empty();" data-toggle="modal" data-target="#exampleModal">
                Add New Customer
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-3">
                                    <label for="Name">Tên khách hàng</label>
                                </div>
                                <div class="col-lg-9">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="Name_cus">
                                    </div>
                                </div>

                                <div class="col-lg-3">
                                    <label for="Name">Email</label>
                                </div>
                                <div class="col-lg-9">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="email_cus">
                                    </div>
                                </div>
                               
                                <div class="col-lg-3">
                                    <label for="Name">Địa chỉ</label>
                                </div>
                                <div class="col-lg-9">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="address_cus">
                                    </div>
                                </div>


                                <div class="col-lg-3">
                                    <label for="Name">Số điện thoại</label>
                                </div>
                                <div class="col-lg-9">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="phone_cus">
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <label for="Name">Mật Khẩu</label>
                                </div>
                                <div class="col-lg-9">
                                    <div class="form-group">
                                        <input type="text" autocomplete="false" class="form-control" id="password_cus">
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" id="btn-accept-add" class="btn btn-primary" onclick="AddCus();">AddCus</button>
                            <button type="button" style="display:none;" id="btn-accept-update" class="btn btn-primary" onclick="UpdateCus(CusId)">Update</button>
                        </div>
                    </div>
                </div>
            </div>


        </form>
        <table id="Blog" class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Phone</th>                                    
                    <th>Update</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody id="allCus"></tbody>
        </table>
    </div>
</body>
</html>
<script type="text/javascript">
    let url = 'http://localhost:5248/';

    $(document).ready(function () {
        GetAllCus();
    });
   
    var CusId;

    function GetAllCus() {
        $.ajax({
            url: url + 'api/ApiCustomer',
            method: 'GET',
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            error: function (res) {

            },
            success: function (res) {
                const len = res.length;

                let table = '';
                for (var i = 0; i < len; ++i) {
                    table = table + '<tr>';
                    table = table + '<td>' + res[i].name + '</td>';                  
                    table = table + '<td>' + res[i].email + '</td>';
                    table = table + '<td>' + res[i].address + '</td>';
                    table = table + '<td>' + res[i].phone + '</td>';                                      
                    table = table + '<td>' + '<button type="button" class="btn btn-warning" onclick="GetCus(\'' + res[i].id + '\')">Update</button> </td>';
                    table = table + '<td> <button type="button" class="btn btn-danger" onclick="DeleteCus(\'' + res[i].id + '\')">Delete</button> </td>';
                    table = table + '</tr>';
                }

                document.getElementById('allCus').innerHTML = table;
            },
            fail: function (response) { }

        })
    }
   
    function AddCus() {
        
        $.ajax({
            url: url + 'api/ApiCustomer' + "?name=" + $("#Name_cus").val() + "&email=" + $("#email_cus").val() + "&address=" + $("#address_cus").val() + "&phone=" + $("#phone_cus").val() + "&password=" + $("#password_cus").val(),
            method: "POST",
            contentType: 'json',
            dataType: 'json',
            error: function (res) {
                alert("Them moi khong thanh cong");
            },
            success: function (res) {
                alert("Them moi thanh cong");
                $('.close').trigger('click');

                GetAllCus();

            },
            fail: function (response) { }
        })
    }

    function GetCus(id) {
        $("#btnModel").trigger('click');
        $("#btn-accept-add").css("display", "none");
        $("#btn-accept-update").css("display", "block");
      
        document.getElementById('password_cus').readOnly = true;
        

        $.ajax({
            url: url + 'api/ApiCustomer/' + id,
            method: 'GET',
            contentType: 'json',
            dataType: 'json',
            error: function (res) {
            },
            success: function (res) {
                
                CusId = res.id;
                $("#Name_cus").val(res.name),
                    $("#email_cus").val(res.email),
                    $("#address_cus").val(res.address),
                    $("#phone_cus").val(res.phone),
                    $("#password_cus").val(res.password)
                    
                   
            },
            fail: function (response) { }

        })
    }

    function UpdateCus(id) {      
        $.ajax({
            url: url + "api/ApiCustomer/" + id + "?name=" + $("#Name_cus").val() + "&email=" + $("#email_cus").val() + "&address=" + $("#address_cus").val() + "&phone=" + $("#phone_cus").val() + "&password=" + $("#password_cus").val(),
            method: "PUT",
            contentType: 'json',
            dataType: 'json',
            error: function (res) {
                alert("Sua khong thanh cong");
            },
            success: function (res) {
                alert("Sua thanh cong");
                GetAllCus();
                $('.close').trigger('click');

            },
            fail: function (response) { }
        })
    }

    function Empty() {
        $("#btn-accept-add").css("display", "block");
        $("#btn-accept-update").css("display", "none");
        $.ajax({
            error: function (res) {

            },
            success: function (res) {
                $("#Name_cus").val(''),
                    $("#email_cus").val(''),
                    $("#address_cus").val(''),
                    $("#phone_cus").val(''),
                    $("#password_cus").val('')
            },
            fail: function (response) { }
        })
    }

    function DeleteCus(id) {
        if (confirm("Ban co muon xoa khong?")) {
            $.ajax({
                url: url + "api/ApiCustomer/" + id,
                method: "DELETE",
                contentType: 'json',
                dataType: 'json',
                error: function (res) {
                    alert("Xoa khong thanh cong");
                },
                success: function (res) {
                    alert("Xoa thanh cong");
                    GetAllCus();
                },
                fail: function (response) { }
            })
        }
    }
</script>
