    function GetSlide(id) {
        $("#btnModel").trigger('click');
        $("#btn-accept-add").css("display", "none");
        $("#btn-accept-update").css("display", "block");

        $.ajax({
            url: url + 'api/APISlide/' + id,
            method: 'GET',
            contentType: 'json',
            dataType: 'json',
            error: function (res) {
            },
            success: function (res) {
                photo = res.photo;
                ProdId = res.id;
                $("#Name").val(res.name),
                    $("#Title").val(res.title),
                    $("#SubTitle").val(res.subtitle),
                    $("#Link").val(res.link),
                    $("#Info").val(res.info),

                    $("#Photo").val(res.photo)
            },
            fail: function (response) { }

        })
    }

    function UpdateSlide(id) {
        uploadFiles();
        if ($("#Photo").val() != '') {
            photo = document.getElementById("Photo").value;
        }
        $.ajax({
            url: url + "api/APISlide/" + id + "?name=" + $("#Name").val() + "&title=" + $("#Title").val() + "&subtitle=" + $("#SubTitle").val() + "&photo=" + $("#Photo").val() + "&link=" + $("#Link").val() + "&info=" + $("#Info").val(),
            method: "PUT",
            contentType: 'json',
            dataType: 'json',
            error: function (res) {
                alert("Sua khong thanh cong");
            },
            success: function (res) {
                alert("Sua thanh cong");
                GetAllSlides();
                $('.close').trigger('click');

            },
            fail: function (response) { }
        })
    }

    function DeleteSlide(id) {
        if (confirm("Ban co muon xoa khong?")) {
            $.ajax({
                url: url + "api/APISlide/" + id,
                method: "DELETE",
                contentType: 'json',
                dataType: 'json',
                error: function (res) {
                    alert("Xoa khong thanh cong");
                },
                success: function (res) {
                    alert("Xoa thanh cong");
                    GetAllSlides();
                },
                fail: function (response) { }
            })
        }
    }

    function Empty() {
        $("#btn-accept-add").css("display", "block");
        $("#btn-accept-update").css("display", "none");
